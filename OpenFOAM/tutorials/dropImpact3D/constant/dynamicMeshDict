FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "constant";
    object      dynamicMeshDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dynamicFvMesh   dynamicRefineBalancedFvMesh;

refinementControls
{
    enableRefinementControl  true;
    
    fields // must be scalarFields
    (
        //alpha (min max refineLevel)
//        alpha.fc72liquid (0.01 0.99 2) // refine cells where alpha in [0.01:0.99] with maximal 2 refinement layers
    );
    
    interface // must be a scalarField (only one dictionary!)
    (
        alpha.water // refine interface (found based on snGrad of alpha > 0.1) 
        {
            innerRefLayers 2; // describes how many cell layers inside phase alpha are to be refined
            outerRefLayers 2; // describes how many cell layers outside phase alpha are to be refined
            // optional settings:
            maxRefineLevel 2; // max refinement layers; Default: maxRefinement from dynamicRefineFvMeshCoeffs is used
            // to get slower than 2:1 refinement; add #nAddLayers between each refinement level at the interface
            nAddLayers 0; // default: nAddLayers=0 
        }
    );

   
    gradients // must be scalars
    (
        // arguments as in 'fields'
        // min/max values are based on mag(fvc::grad(volScalarField)) * cellVolume
//        T    (0.01 10 1)

    );
    
    curls // must be vectors
    (
        // arguments as in 'fields'
        // min/max values are based on mag(fvc::curl(volVectorField))
//        U   (0.5 1 2)
    );
   
    regions
    (        
    );


}

dynamicRefineFvMeshCoeffs
{
    // Extra entries for balancing
    enableBalancing true;
    allowableImbalance 0.25;

    // How often to refine
    refineInterval  10;
    
    // Field to be refinement on (set it to 'internalRefinementField' to use the
    // refinementControls dictionary entries above)
    field           internalRefinementField;
    
    // Refine field inbetween lower..upper
    lowerRefineLevel 0.5;
    upperRefineLevel 2.5; // maxRefinement+0.5
    
    // If value < unrefineLevel unrefine
    unrefineLevel   -0.5;
    
    // Have slower than 2:1 refinement
    nBufferLayers   4;
    
    // Refine cells only up to maxRefinement levels
    maxRefinement   2;
    
    // Stop refinement if maxCells reached
    maxCells        20000000;
    
    // Flux field and corresponding velocity field. Fluxes on changed
    // faces get recalculated by interpolating the velocity. Use 'none'
    // on surfaceScalarFields that do not need to be reinterpolated.
    correctFluxes
    (
//        (phi Urel)
        (phiAbs U)
        (phiAbs_0 U_0)
        (nHatf none)
        (rho*phi none)
        (ghf none)
        (phi_0 U_0)
        (alphaPhi none)
        (rhoPhi none)
        (phi U)
    );

    mapSurfaceFields 
    (
        Uf
        Uf_0
    ); 
    
    // Write the refinement level as a volScalarField
    dumpLevel       true;
}


// ************************************************************************* //
