        minComprVel     0; // minimal compression-scaling velocity 0.001

        MULESCorr       yes;
        nLimiterIter    3;

        solver          PBiCG;
        preconditioner  DILU;
        smoother        symGaussSeidel;
        tolerance       1e-14;
        relTol          0;
    }

    pcorr
    {
        solver         PCG;
        preconditioner
        {
            preconditioner   GAMG;
            tolerance        1e-3;
            relTol           0;

            smoother         GaussSeidel;
            nPreSweeps       0;
            nPostSweeps      2;
            nBottomSweeps    2;

            cacheAgglomeration false;
            nCellsInCoarsestLevel 950;
            agglomerator     faceAreaPair;
            mergeLevels      1;
        };

        tolerance        1e-8;
        relTol           0;
//      maxIter          100;
    };

    "pcorr.*"
    {
        solver          PCG;
        preconditioner  DIC;
        tolerance       1e-10;
        relTol          0;
    }

    p_rgh
    {
        solver           GAMG;
