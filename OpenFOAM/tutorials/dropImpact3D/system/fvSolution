            preconditioner   GAMG;
            tolerance        1e-08;
            relTol           1e-03;

            nVcycles         2;

            smoother         GaussSeidel;
            nPreSweeps       0;
            nPostSweeps      2;
            nFinestSweeps    2;

            cacheAgglomeration false;
            nCellsInCoarsestLevel 950;
            agglomerator     faceAreaPair;
            mergeLevels      1;
        };

        tolerance        1e-08;
        relTol           0;
        maxIter          20;
    };

    U
    {
        solver           smoothSolver;
