{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      blockMeshDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

convertToMeters 0.01; //values here are in cm

vertices
(
    (0 0 -0.5)
    (0 2 -0.5)
    (1 2 -0.5)
    (1 0 -0.5)
    (0 0  0.5)
    (0 2  0.5)
    (1 2  0.5)
    (1 0  0.5)
);

blocks
(
    hex (0 3 2 1 4 7 6 5) (1 2 1) simpleGrading (1 1 1)
);

edges
(
);

boundary
(
    upDown
    {
        type patch;
        faces
        (
            (1 5 6 2)
            (0 3 7 4)
        );
    }

    frontBack
    {
        type empty;
        faces
        (
            (6 5 4 7)
            (0 1 2 3)
        );
    }

    leftRight
    {
        type patch;
        faces
        (
            (3 2 6 7)
            (5 1 0 4)
        );
    }
);

mergePatchPairs
(
);

